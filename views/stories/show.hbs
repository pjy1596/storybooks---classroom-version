<div class="row">
    <div class="col s12 m8">
        <h3>{{story.title}} {{{editIcon story.user user story._id false}}}</h3>
        <div class="card blue-grey darken-1">
            <div class="card-content white-text">
                <span>{{formatDate story.createdAt 'MMMM Do YYYY, h:mm:ss a'}}</span>
                <p>{{stripTags story.body}}</p>
            </div>

        </div>
    </div>
    <div class="col s12 m4">
        <div class="card center-align">
            <div class="card-content ">
                <span class="card-title">{{story.user.fullName}}</span>
                <img src="{{story.user.image}}" class='circle img-small responsive-img'>
            </div>

            <div class="card-action">
                <a href="/stories/user/{{story.user._id}}">MORE FROM {{story.user.fullName}}</a>
            </div>
        </div>
    </div>
</div>